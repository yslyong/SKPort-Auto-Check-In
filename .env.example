# Example .env for SKPort Auto Check-in (Node)
# Important: PROFILES must be a JSON array (as a single-line or multi-line JSON string).
# Example PROFILES value (JSON string):
# PROFILES='[{"cred":"YOUR_CRED","skGameRole":"3_4760000000_2","platform":"3","vName":"1.0.0","accountName":"MyAccount"}]'

# PROFILES: JSON array of profiles (see example above). REQUIRED.
PROFILES='[
  {
    "cred": "YOUR_CRED_STRING_HERE",
    "skGameRole": "3_4760000000_2",
    "platform": "3",
    "vName": "1.0.0",
    "accountName": "My Account"
  }
]'

# Discord notifications
ENABLE_DISCORD_NOTIFY=true
DISCORD_WEBHOOK_URL=""
DISCORD_USER_ID=""

# The script now runs once on container startup and then exits. Use RUN_ONCE=true to explicitly indicate run-once behavior.
# If you want repeated scheduling, run the container from an external scheduler (cron, systemd timer, Kubernetes cronJob, etc.).

# If true, run once and exit immediately
RUN_ONCE=false

